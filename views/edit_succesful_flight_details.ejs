
<%- include('./reusable/admin_reusable') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flying</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css">
    <style>
        body {
            background-color: #f0f0f0;
        }
        .topspace{
          margin-top: 5%;
        }
        

       

        
        h1 {
            text-align: center;
        }

        form {
            margin: 20px auto;
            max-width: 400px;
            background-color: #fff;
            padding: 20px;
            border-radius: 4px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input,
        select {
            width: 100%;
            padding: 5px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button[type="submit"] {
            display: inline-block;
            padding: 8px 16px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

        button[type="submit"]:hover {
            background-color: #45a049;
        }

     



    </style>
    <script>
        window.addEventListener("DOMContentLoaded", () => {
            const profileIcon = document.querySelector(".profile-icon");
            profileIcon.addEventListener("mouseover", () => {
                profileIcon.style.transform = "rotate(360deg)";
            });
            profileIcon.addEventListener("mouseout", () => {
                profileIcon.style.transform = "rotate(0deg)";
            });
        });
        function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      const content = document.getElementById('content');
      const hamburger = document.getElementById('hamburger');
      
      if (sidebar.style.width === '250px') {
        sidebar.style.width = '0';
        content.style.marginLeft = '70px';
        hamburger.classList.remove('active');
      } else {
        sidebar.style.width = '250px';
        content.style.marginLeft = '320px';
        hamburger.classList.add('active');
      }
    }
    </script>
</head>
<body>
  <div class="topspace">
        

    <h1>Edit successful flight details</h1>
      
    
    <form action="/edit_succesfulflightdetails" method="POST">
        <div>
            
            <input type="hidden" id="flight_id" name="flight_id" value=<%-schedule_details.flight_id%>>
        </div>
        <div>
            <label for="emailid">Email ID:</label>
            <input type="email" id="emailid" name="emailid" value=<%-schedule_details.emailid%>>
          </div>
          <div>
            <label for="copilot">Copilot:</label>
            <input type="text" id="copilot" name="copilot" value=<%-schedule_details.copilot%>>
          </div>

        <div>
            <label for="duration">Flight Time:</label>
            <input type="number"  name="duration" value=<%-schedule_details.duration%>>
        </div>
        <div>
            <label for="date">Date:</label>
            <input type="date" id="date" name="date" value=<%-schedule_details.date%>>
        </div>
        <div>
            <label for="mode">Mode:</label>
            <input type="text" id="mode" name="mode" value=<%-schedule_details.mode%> >
        </div>
        
        <div>
            <label for="batteryid">Batter ID:</label>
            <input type="text" id="batteryid" name="batteryid" value=<%-schedule_details.batteryid%> >
        </div>
        <div>
            <label for="takeoffvoltage">Take Off Voltage:</label>
            <input type="text" id="takeoffvoltage" name="takeoffvoltage" value=<%-schedule_details.takeoffvoltage%>>
        </div>
        <div>
            <label for="lvoltage">Landing Voltage:</label>
            <input type="text" id="landingvoltage" name="landingvoltage" value=<%-schedule_details.landingvoltage%>>
        </div>
        <div>
            <label for="windspeed">Wind Speed:</label>
            <input type="text" id="windspeed" name="windspeed" value=<%-schedule_details.windspeed%>>
        </div>

        <div>
            <label for="wind_direction">Wind Direction:</label>
            <input type="text" id="winddirection" name="winddirection" value=<%-schedule_details.winddirection%> >
        </div>

        <div>
            <label for="drone_id">Type of drone:</label>
            <input type="text" id="drone_id" name="drone_id" value=<%-schedule_details.drone_id%> >
        </div>
        <div>
            <label for="flight_succesful">flight_succesful?</label>
            <input type="text" id="result" name="result" value="<%-schedule_details.result%>" readonly>
        </div>
        <center> <button type="submit" class="btn"ONCLICK="alert('Succesfully updated flight details...')">Update</button></center>
        
    </form>
  </div>
</body>
</html>