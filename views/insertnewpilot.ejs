    <center><h1><b>Insert Pilot Details</b></h1></center>
    
    <div class="form">
        <form action="/insertpilot" method="POST" enctype="multipart/form-data">
            
            <div class><br><br>
                <label for="name"><b>Name</b></label>
                <input type="text" id="name" placeholder="Name" value="" name="name" required>
            </div>
            
            <div>
                <label for="email_id"><b>Email_ID</b></label>
                <input type="email" id="email_id" placeholder="Email ID" value="" name="email_id" required>
            </div>
            <div>
                <label for="mobile_no"><b>Mobile_Number</b></label>
                <input type="mobile" id="mobile_no" name="mobile_no" placeholder="Mobile Number" value="" name="mobile_no" required>
            </div>
            <div class>
                <label for="dob"><b>DOB</b></label>
                <input type="date" id="dob" placeholder="DOB" value="" name="dob" required>
            </div>

            <div class>
                <label for="type_of_drone_experience"><b>Type of drone experience</b></label>
                <input type="text" id="type_of_drone_experience" placeholder="Type of Drone Experience" value="" name="type_of_drone_experience" required>
            </div>
            <div>

                <div class>
                    <label for="honors_and_achievements"><b>Honors and Achievements</b></label>
                    <input type="text" id="honors_and_achievements" placeholder="Honors and Achievements" value="" name="honors_and_achievements" required>
                </div>
                <div>
                <label for="image"><b>Upload Image</b></label>
                <input type="file" id="image" 
                       name="image" value="" required>
            </div>
            <div>
                <button type="submit" ONCLICK="alert('Succesfully Inserted Pilot Details...')">Submit</button>
                <a class="btn btn-secondary" href="/all_pilots" ><i class="fa fa-list-alt"></i> View All</a>
            </div>
            
        </form>

        
            
    </div>
  
 

  
    
